#!/bin/bash
## ini variables onfigurar ##
DB_USER=root
DB_PASS=Fico@mysql
DB_NAME= dbrhum
BACKUP_DIR=/home/fico/
MESSAGE_FILE=backup.mail.message
USER_MAIL=ficochiossone@yahoo.com
## fin variables a configurar ##

###-----config nombre de file de bk y lo genera-----------------------

BACKUP_FILE=${BACKUP_DIR}(date +%Y%m%d)-{DB_NAME}.sql
mysqldump --opt -u ${DB_USER} -p${DB_PASS} ${DB_NAME} > {BACKUP_FILE}
echo "Se dumpeo la base de datos"
###----  lo comprime -------------------------------------------------

bzip2 ${BACKUP_FILE}
echo "Se comprimio"

###---------   lo envia con mutt -----------------------------------------------------------

mutt -s "Copia Seg  $(date +%B)de %(date +%Y)" ${USER_MAIL} -a ${BACKUP_FILE}.bz2 < ${BACKUP_DIR}${MESSAGE_FILE}
echo "Se envio x mutt"






